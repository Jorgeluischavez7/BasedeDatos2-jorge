CREATE
  TABLE SUCURSAL
  (
    ID_SUCURSAL NUMBER,
    ID_CLIENTE  NUMBER,
    NOMBRE      VARCHAR2(120),
    TELEFONO    VARCHAR2(40),
    VENTA       NUMBER,
    CONSTRAINT PK_ID_SUCURSAL PRIMARY KEY (ID_SUCURSAL),
    CONSTRAINT FK_ID_CLIENTE1 FOREIGN KEY (ID_CLIENTE) REFERENCES
    EMPLEADO_VENTAS (ID_CLIENTE)
  );
