SELECT
  EMPLEADO_VENTAS.ID_CLIENTE,
  EMPLEADO_VENTAS.NOMBRE_CLIENTE,
  SUCURSAL.NOMBRE
FROM
  EMPLEADO_VENTAS
JOIN SUCURSAL
ON
  EMPLEADO_VENTAS.ID_CLIENTE=SUCURSAL.ID_CLIENTE;
/*
2 ESTA ES UNA SOLUCION AL EJERCICIO 3 :D
3 */
SET serveroutput ON;
DECLARE
  id_actual     INTEGER;
  total_actual  INTEGER;
  nombre_actual VARCHAR2(120);
  CURSOR cur
  IS
    SELECT
      id_cliente,
      venta
    FROM
      sucursal
    ORDER BY
      id_cliente;
BEGIN
  id_actual   :=1;
  total_actual:=0;--si no vendio nada
  SELECT
    nombre_cliente --se deposita nombre_cliente en nombre_actual
  INTO
    nombre_actual
  FROM
    empleado_ventas
  WHERE
    id_cliente=id_actual;--aqui se delimita el cursor de una sola ocurrencia. 
  FOR fila IN cur --fila es cualquier nombre y (cur es el limite, nombre del cursor)
  LOOP
    IF id_actual   =fila.id_cliente THEN
      total_actual:=total_actual+fila.venta;
    ELSE
      dbms_output.put_line('nombre '||nombre_actual ||'suma total:'||
      total_actual);
      id_actual   :=fila.id_cliente;--lo quita del id actual
      total_actual:=fila.venta;
      SELECT
        nombre_cliente--se vuelve actualizar el nuevo cliente
      INTO
        nombre_actual
      FROM
        empleado_ventas
      WHERE
        id_cliente=id_actual;
    END IF;
  END LOOP;
  dbms_output.put_line('nombre '||nombre_actual ||'  suma total:'||total_actual);--es para que aparesca chana
END;
/
/*
31 SOLUCION CON UNION DE TABLAS USANDO LA PALABRA RESERVADA TYPE
32 */
SET SERVEROUTPUT ON;
DECLARE
  suma_sueldo NUMBER;
  nombre_empleado EMPLEADO_VENTAS.NOMBRE_CLIENTE%TYPE;--es cuando no se sabe el tipo de la variable solo mayusculas
  --nombre x varchar2(120);
  CURSOR CURSOR_VENDEDOR
  IS
    SELECT
      EMPLEADO_VENTAS.ID_CLIENTE,
      EMPLEADO_VENTAS.NOMBRE_CLIENTE,
      SUCURSAL.NOMBRE,
      SUCURSAL.VENTA
    FROM
      EMPLEADO_VENTAS
    JOIN SUCURSAL
    ON
      EMPLEADO_VENTAS.ID_CLIENTE=SUCURSAL.ID_CLIENTE;
BEGIN
  FOR REC IN CURSOR_VENDEDOR
  LOOP
    IF rec.nombre_cliente = nombre_empleado THEN
      suma_sueldo        :=REC.VENTA + suma_sueldo;
    ELSE
      DBMS_OUTPUT.PUT_LINE(nombre_empleado||' : '||suma_sueldo);
      suma_sueldo    :=REC.VENTA;
      nombre_empleado:=REC.nombre_cliente;
    END IF;
  END LOOP;
  DBMS_OUTPUT.PUT_LINE(nombre_empleado||' : '||suma_sueldo);
END;
/
