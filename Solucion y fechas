set serveroutput on;
begin
dbms_output.put_line('current date time es: '|| current_date);
dbms_output.put_line('current time stamp time es: '|| current_timestamp);
dbms_output.put_line('local timestamp es:   '|| localtimestamp);
dbms_output.put_line('sysdate es: '|| sysdate);
dbms_output.put_line('systimestamp es: '|| systimestamp);
end;
